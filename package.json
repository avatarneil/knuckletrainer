{
  "name": "knuckletrainer",
  "version": "1.5.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:wasm:release && next build --webpack",
    "build:wasm": "cd wasm && wasm-pack build --target web --out-dir pkg",
    "build:wasm:release": "cd wasm && wasm-pack build --target web --out-dir pkg --release",
    "build:wasm:check": "command -v wasm-pack >/dev/null 2>&1 && npm run build:wasm:release || echo 'WASM build skipped: wasm-pack not found'",
    "build:native": "./scripts/build-native.sh",
    "vercel-build": "./vercel-build.sh",
    "start": "next start",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "generate-icons": "node scripts/generate-icons.mjs",
    "generate-app-icons": "node scripts/generate-app-icons.mjs",
    "cap:sync": "bunx cap sync",
    "cap:ios": "bunx cap open ios",
    "cap:android": "bunx cap open android",
    "screenshots": "bun run scripts/appstore-screenshots.ts"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@vercel/analytics": "^1.6.1",
    "@vercel/kv": "^3.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "oxfmt": "0.18.0",
    "oxlint": "1.33.0",
    "playwright": "^1.57.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wasm-pack": "^0.13.0"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
